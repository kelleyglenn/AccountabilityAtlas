terraform {
  required_version = ">= 1.8"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = var.region

  default_tags {
    tags = {
      Project     = "accountabilityatlas"
      Environment = var.environment
      ManagedBy   = "opentofu"
    }
  }
}
